Linear Search Using Rercursion

#include <iostream>

using namespace std;
bool binarySearch(int arr[],int n,int k){
      
      if(n==0){
            return false;
      }
      if(arr[0]==k){
            return true;
      }
      else{
            return binarySearch(arr+1,n-1,k);
      }
            
      
      
      
}
int main()
{
   int n;
   cin>>n;
   int arr[n];
   for(int i=0;i<n;i++){
         cin>>arr[i];
   }
   int k;
   cin>>k;
   cout<<binarySearch(arr,n,k);

    return 0;
}
